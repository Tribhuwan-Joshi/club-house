extends layout
block content 
    div(class="w-[60%] min-w-[400px] mx-auto p-4 my-8  bg-gray-50")
        h1(class="text-2xl text-center font-semibold")=title
        
        div(class="info gap-2 flex justify-between my-2")
            p(class="italic underline")=post.creator 
            p(class="underline")=post.postDate
        p=post.story
        if user.isAdmin
            form(action="/catalog/post/:id/delete" class="flex justify-end mt-6" method="POST")
                button(class="bg-red-500 text-white rounded-sm p-1 text-sm ml-auto hover:bg-red-600") Delete Post