extends layout 
block content 
    div(class="w-[80%] my-8 mx-auto") 
        h1(class="text-center text-xl font-semibold underline tracking-wider") Create New Post 
        form(class="mx-auto border border-gray-700 bg-gray-100  w-max p-4 grid grid-cols-[1fr,2fr] gap-6 my-10" action="" method="post")
            label(for="title" class="text-lg justify-self-center") Title 
            input(id="title" required name="title" placeholder="My first day at Job" type="text"  class="px-1 font-mono border border-black")
            label(for="story" class="text-lg justify-self-center") Your tale 
            textarea(name="story" class="p-1 resize border border-gray-400" spellcheck="false"  id="story" cols="40" rows="8")
            
            
            if errors 
                ul(class="col-span-2 list-disc inline-block justify-self-center")
                    for error in errors
                        li(class="text-red-500 font-semibold text-sm")!= error.msg
            input(class="p-1 col-span-2 justify-self-center hover:cursor-pointer px-2 hover:scale-105 bg-yellow-50 border border-black" type="submit" value="Create Post") 